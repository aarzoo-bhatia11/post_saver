{
  "manifest_version": 3,
  "name": "Clipboard Link Saver",
  "version": "1.0",
  "description": "Save any link copied to your clipboard with a keyboard shortcut, and categorize it, viewing them in a sleek new tab.",
  "permissions": [
    "storage",
    "clipboardRead",
    "notifications",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Saved Links" 
  },
  "options_page": "options.html",
  "commands": {
    "save_clipboard_link": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Save the current link from clipboard to the extension."
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}